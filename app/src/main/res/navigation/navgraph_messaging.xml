<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph_messaging"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.comp30022.team_russia.assist.features.home_contacts.HomeContactFragment"
        android:label="Contact List"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_view_chat"
            app:destination="@id/messageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/messageFragment"
        android:name="com.comp30022.team_russia.assist.features.message.MessageListFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_message_list" />

</navigation>