<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.comp30022.team_russia.assist.features.home_contacts.HomeContactViewModel" />
        <variable
            name="data"
            type="com.comp30022.team_russia.assist.features.home_contacts.models.ContactListItemData" />
    </data>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip"
        android:onClick="@{() -> viewmodel.onListItemClicked(data)}">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/message_circle" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-6dp"
            android:text="@{data.name}" />


        <TextView
            android:id="@+id/textMessages"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textName"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:text="@{data.lastMessage}"
            android:layout_alignLeft="@id/textName"
            android:layout_marginLeft="2dp" />
    </RelativeLayout>

</layout>