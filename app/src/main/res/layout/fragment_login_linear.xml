<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="com.comp30022.team_russia.assist.features.login.ui.LoginViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="@{!safeUnbox(viewmodel.isBusy)}"
            android:hint="Username"
            android:inputType="textVisiblePassword"
            android:text="@={viewmodel.username}"
            android:textSize="30dp"
            android:layout_weight="1"

            />


        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="@{!safeUnbox(viewmodel.isBusy)}"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={viewmodel.password}"
            android:textSize="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="@{safeUnbox(viewmodel.isLoginButtonEnabled)}"
            android:onClick="@{()->viewmodel.loginClicked()}"
            android:text="Login"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{()->viewmodel.registerClicked()}"
            android:text="Register"
            android:textSize="30dp"
            android:layout_weight="1"/>
        <!-- safeUnbox() is used to convert a Boolean object to a primitive boolean value and
            prevent NullPointerException. -->
    </LinearLayout>
</layout>