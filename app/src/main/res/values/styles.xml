<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!-- Custom App Bar -->
    <style name="HeaderBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Login text size -->
    <style name="textSize" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Full screen background image -->
    <style name="FullScreenImage" parent="AppTheme">
        <item name="android:background">@color/colorBlack</item>
    </style>
</resources>
